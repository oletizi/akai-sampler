{
  "name": "akai-sampler",
  "version": "1.0.0",
  "start": "src/ts/app/server.ts",
  "type": "module",
  "web-types": "./web-types.json",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "watch:build": "nodemon --watch 'src/*' -e css,scss,html,js,jsx,ts,tsx -x \"npm run build\"",
    "watch:uitest": "nodemon --watch 'src/*' -e css,scss,html,js,jsx,ts,tsx -x \"npm run build:uitest\"",
    "watch:start": "nodemon --watch 'src/*' -e ts -x \"npm run start\"",
    "build:tailwind": "npx tailwindcss -i ./src/scss/app.css -o ./build/site/static/css/app.css",
    "build:sass": "npx sass src/scss/styles.scss build/site/static/css/styles.css",
    "build:uitest": "npm run build:static && npx esbuild src/ts/app/uitest.tsx --bundle --outfile=build/site/static/js/uitest.js",
    "build:app": "npm run build:static && npx esbuild src/ts/app/app.tsx --bundle --outfile=build/site/static/js/app.js ",
    "build:client": "npx esbuild src/ts/app/client.tsx --bundle --outfile=build/site/static/js/client.js",
    "build:client-s56k": "npx esbuild src/ts/app/client-s56k.tsx --bundle --outfile=build/site/static/js/s56k-client.js",
    "build:shoelace-test": "npx esbuild src/ts/app/shoelace-test.tsx --bundle --outfile=build/site/static/js/shoelace-test.js",
    "build:static": "(cd ./src/static && copyfiles ./**/* ../../build/site/static/) && npm run build:tailwind",
    "build": "npm run build:app",
    "build:all": "npm run build:app && npm run build:client && npm run build:client-s56k && npm run build:shoelace-test",
    "build:DEPRECATED": "(cd ./src/static && copyfiles ./**/* ../../build/site/static/) && npm run tailwind-build && npm run sass-build && npm run bundler-build",
    "start": "npm run build && tsx src/ts/app/server.ts",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' c8 mocha 'test/**/*.test.{js,ts,tsx}'",
    "translate": "tsx src/ts/translate.ts",
    "info": "tsx src/ts/info.ts",
    "clean": "rm -rf ./build/*"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@chakra-ui/react": "^3.1.2",
    "@emotion/react": "^11.13.3",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.1.2",
    "@shoelace-style/shoelace": "^2.18.0",
    "@types/cheerio": "^0.22.35",
    "antlr4": "^4.13.2",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "cheerio": "^1.0.0",
    "commander": "^12.1.0",
    "dayjs": "^1.11.13",
    "express": "^4.21.1",
    "got": "^14.4.3",
    "lodash": "^4.17.21",
    "next-themes": "^0.4.3",
    "node-polyfill-webpack-plugin": "^4.0.0",
    "queue": "^7.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "riff-parser": "^1.0.1",
    "tailwindcss": "^3.4.15",
    "tmp": "^0.2.3",
    "tsx": "^4.19.1",
    "wavefile": "^11.0.0",
    "wavefile-parser": "^1.0.1",
    "webmidi": "^3.1.11"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.7",
    "@types/chai": "^5.0.0",
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.7.5",
    "@types/react-dom": "^18.3.1",
    "@types/tmp": "^0.2.6",
    "@webpack-cli/generators": "^3.0.7",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.2",
    "electron": "^33.0.1",
    "esbuild": "0.24.0",
    "mocha": "^10.7.3",
    "mochawesome": "^7.1.3",
    "prettier": "^3.3.3",
    "sass": "^1.80.3",
    "sass-loader": "^16.0.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3"
  }
}
